        "opacity-100",
        "translate-x-0",
        "translate-y-0",
        "-translate-x-10",
        "translate-x-10",
        "translate-y-10"
      );

      el.classList.add("opacity-0");

      if (dir === "left") {
        el.classList.add("-translate-x-10");
      } else if (dir === "right") {
        el.classList.add("translate-x-10");
      } else {
        el.classList.add("translate-y-10");
      }
    };

    const applyVisibleState = (el) => {
      const dir = el.getAttribute("data-animate") || "up";

