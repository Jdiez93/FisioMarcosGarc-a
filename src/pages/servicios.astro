            const el = entry.target;
            if (entry.isIntersecting) {
              applyVisibleState(el);
            } else {
              applyHiddenState(el);
            }
          });
        },
        { threshold: 0.2 }
      );

      animatedEls.forEach((el) => {
        applyHiddenState(el);
        observer.observe(el);
      });
    }
  </script>
</BaseLayout>
