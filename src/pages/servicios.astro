      el.classList.add("opacity-100");

      if (dir === "left" || dir === "right") {
        el.classList.add("translate-x-0");
      } else {
        el.classList.add("translate-y-0");
      }
    };

    if (animatedEls.length > 0 && "IntersectionObserver" in window) {
